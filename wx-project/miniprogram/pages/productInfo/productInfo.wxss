/* 顶部的搜索框 */
.search{
  display:flex;
  justify-content: flex-start;
  margin:25rpx 20rpx 0rpx 20rpx;
}
.search input{
  width:90%;
  height:20rpx;
  border:2rpx solid #aaa;
  border-radius: 5rpx;
  margin-right:10rpx;
}
.place-holder{
  font-size:26rpx;
  color:#aaf;
  margin-left:20rpx;
}
.search button{
  width:15%;
  height:53rpx;
  font-size:27rpx;
  border:1rpx solid red;
  text-align:center;
  line-height:50rpx;
  padding:0;
  color:red;
}
/* 顶部导航条 */
.tab {
  width:100%;
  margin:20rpx 10rpx;
  padding-bottom:10rpx;
  border-bottom:1rpx solid #aaa;
}
.tab span{
  font-size:25rpx;
  width:20%;
  margin:0 19rpx;
  display:inline-block
}
/* 商品详情内容部分 */
.productInfo{
  width:100%;
  display:flex;
  justify-content: space-around;
  flex-wrap: wrap;
  margin:10rpx 0;
}
.productItem{
  width:48%;
  border:1rpx solid #aaa;
  text-align:center;
  display:flex;
  flex-direction: column
}
.imgInfo{
  width:80%;
  height:300rpx;
  margin:8rpx auto;
}
.cart{
  width:30rpx;
  height:30rpx;
  margin-left:50rpx;
}
.productItem h6{
  font-size:30rpx;
  margin:40rpx 0;
}
.price h5{
  font-size:10prx;
  color:red;
}
.price span{
  font-size:18rpx;
  text-decoration: line-through;
  margin-left:20rpx;
}
/* 底部加载更多 */
.btnInfo{
  width:100%;
  text-align:center;
  margin-top:20rpx;
}
.btn{
  margin:10rpx auton;
  width:95%;
  height:60rpx;
  line-height: 60rpx;
  font-size:40rpx;
  color:#faf
}